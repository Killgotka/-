#include <iostream>
using namespace std;
int main() {
    setlocale(0, "");
    int a = 0;
    int b = 0;
    char q;
    cout << "Введите первое число: ";
    cin >> a;
    cout << "Введите условие: ";
    cin >> q;
    cout << "Введите второе число: ";
    cin >> b;

    switch (q) {
    case '-':
        cout << "a - b = " << a - b << '\n';
        break;
    case '+':
        cout << "a + b = " << a + b << '\n';
        break;
    case '*':
        cout << "a * b = " << a * b << '\n';
        break;
    case '/':
        cout << "a / b = " << a / b << '\n';
        break;
    default:
        cout << "Ошибка\n";
    }
    return 0;
}
