Задание 1.
#include <stdio.h>
#include <iostream>
#include <math.h>
using namespace std;
int main()
{   
	int x1, y1, x2, y2;
	cin >> x1 >> y1 >> x2 >> y2;
	cout << sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
}

Задание 2.
#include <stdio.h>
#include <iostream>
#include <math.h>
using namespace std;
int main()
{   
	int a,b,c,ac,bc,sum;
	cin >> a >> b >> c;
	if (c > a) {
		ac = c - a;
	}
	else {
		ac = a - c;
	}
	if (b > c) {
		bc = b - c;
	}
	else {
		bc = c - b;
	}
	sum = ac + bc;
	cout << sum ;
	return 0;
}


Задание 3.
#include <stdio.h>
#include <iostream>
#include <math.h>
using namespace std;
int main()
{   
	int a,b,c,ac,bc,ymn;
	cin >> a >> b >> c;
	if (c > a) {
		ac = c - a;
	}
	else {
		ac = a - c;
	}
	if (b > c) {
		bc = b - c;
	}
	else {
		bc = c - b;
	}
	ymn = ac * bc;
	cout << ymn ;
	return 0;
}
  
  
 Задание 4.
 #include <stdio.h>
#include <iostream>
#include <math.h>
using namespace std;
int main()
{   
	int x1,x2,y1,y2,ab,bc,P,S;
	cin >> x1 >> y1 >> x2 >> y2;
	if (x1 > x2) {
		bc = x1 - x2;
	}
	else {
		bc = x2-x1;
	}
	if (y1 > y2) {
		ab = y1-y2;
	}
	else {
		ab = y2-y1;
	}
	P = (ab + bc) * 2;
	S = ab * bc;
	cout << "S="<< S << " P=" << P;
	return 0;
}

Задание 5.
#include <stdio.h>
#include <iostream>
#include <math.h>
using namespace std;
int main()
{
	int x1, y1, x2, y2,x3,y3,AB,BC,AC,S,P,p;
	cin >> x1 >> y1 >> x2 >> y2 >> x3 >> y3;
	AB = sqrt((x2 - x1) * (x2 - x1) + (y2 - y1) * (y2 - y1));
	BC = sqrt((x3 - x2) * (x3 - x2) + (y3 - y2) * (y3 - y2));
	AC = sqrt((x3 - x1) * (x3 - x1) + (y3 - y1) * (y3 - y1));
	P = AB + BC + AC;
	p = P / 2;
	S = sqrt(p * (p - AB) * (p - BC) * (p - AC));
	cout << "S=" << S << " P=" << P;
	return 0;
}
